{
  "name": "gardenflow-dev-container",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "gardenflow-dev-vscode",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  "containerEnv": {
    "UV_LINK_MODE": "copy"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.rulers": [79],
        "editor.wordWrapColumn": 79,
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "anthropic.claude-code",
        "charliermarsh.ruff",
        "github.copilot",
        "github.copilot-chat",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "oderwat.indent-rainbow",
        "humao.rest-client",
        "usernamehm.error-lens"
      ]
    }
  },
  "postStartCommand": "bash -c 'just setup'",
  "forwardPorts": [8080, 5555],
  "remoteUser": "vscode",
  "mounts": [
    "source=${localEnv:HOME}/.ssh/known_hosts,target=/home/vscode/.ssh/known_hosts,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached"
  ]
}
