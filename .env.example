# Gardenflow environment variables.
# Copy this file to .env and update values as needed.
#
#   cp .env.example .env
#

# Airflow Core Configuration
AIRFLOW_HOME=/workspace/.airflow
AIRFLOW__CORE__EXECUTOR=CeleryExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__DAGS_FOLDER=/workspace/gardenflow/example_dags

# Database Configuration (PostGIS)
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://postgres:postgres@postgis:5432/airflow

# Authentication Configuration (SimpleAuthManager)
AIRFLOW__CORE__SIMPLE_AUTH_MANAGER_ALL_ADMINS=True
AIRFLOW__CORE__SIMPLE_AUTH_MANAGER_PASSWORDS_FILE=/workspace/.airflow/simple_auth_manager_passwords.json

# Celery Configuration (Redis)
AIRFLOW__CELERY__BROKER_URL=redis://redis:6379/0
AIRFLOW__CELERY__RESULT_BACKEND=db+postgresql://postgres:postgres@postgis:5432/airflow

# Webserver Configuration
AIRFLOW__WEBSERVER__BASE_URL=http://localhost:8080
AIRFLOW__WEBSERVER__SECRET_KEY=change_this_secret_key_in_production
